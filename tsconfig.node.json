{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/*",
    "src/preload/*",
    "src/main.ts",
    "src/shared/**/*.*ts",
    "src/@types/*.d.ts",
  ],
  "exclude": [
    "clientBuild/**/*",
    "build/**/*",
  ],
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "outDir": "./clientBuild",
    "typeRoots": [ "./src/@types", ],
  }
}
