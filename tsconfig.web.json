{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/preload/*.d.ts",
    "src/renderer/app/vue.ts",
    "src/renderer/**/*.ts",
    "src/renderer/**/*.*js",
    "src/renderer/**/*.js",
    "src/renderer/app/**/*.js",
    "src/shared/**/*.*ts",
    "src/@types/**/*"
  ],
  "exclude": ["**/*.vue"],
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "clientBuild",
    "paths": {
      "@renderer/*": [
        "src/renderer/*"
      ]
    },
  }
}
